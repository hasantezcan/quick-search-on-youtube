{
  "manifest_version": 2,
  "name": "Quick Search on youtube",
  "description": "Select any text on the web page and search this text directly on youtube!",
  "version": "1.0.0",
  "icons": {
    "16": "./src/assets/images/icon-16.png",
    "128": "./src/assets/images/icon-128.png"
  },
  "background": {
    "scripts": ["./src/background.js"],
    "presistent": false
  },
  "browser_action": {
    "default_icon": "./src/assets/images/youtube-logo.png",
    "default_popup": "./src/index.html",
    "default_title": "Quick Search on youtube"
  },
  "permissions": ["contextMenus"]
}
